{
  "hosting": [
    {
      "target": "hugo",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "headers": [
            {
              "key": "X-XSS-Protection",
              "value": "1; mode=block"
            },
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            }
          ],
          "source": "**"
        },
        {
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            }
          ],
          "source": "**"
        },
        {
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300"
            }
          ],
          "source": "404.html"
        }
      ],
      "redirects": [
        {
          "source": "/docs/latest/",
          "destination": "/docs/v2021.09.30/",
          "type": 302
        },
        {
          "source": "/docs/latest/:rest*",
          "destination": "/docs/v2021.09.30/:rest",
          "type": 302
        },
        {
          "source": "/docs",
          "destination": "/docs/v2021.09.30/",
          "type": 302
        }
      ]
    }
  ]
}
